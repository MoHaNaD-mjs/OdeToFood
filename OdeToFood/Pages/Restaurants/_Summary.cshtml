@using OdeToFood.Core
@model Restaurant

    <div class="card">
        <div class="card-header">
            <h3>@Model.Name</h3>
        </div>
        <div class="card-body">
            <span>Location: @Model.Location</span>
            <span>Location: @Model.Cuisine</span>
        </div>
        <div class="card-footer">
            <a class="btn btn-dark"
               asp-page="./Detail"
               asp-route-restaurantId="@Model.Id">
                <i class=""></i>
            </a>
           
                <a class="btn btn-outline-dark"
                   asp-page="./Edit"
                   asp-route-restaurantId="@Model.Id">
                    <i class=""></i>
                </a>

                <a class="btn btn-outline-warning"
                   asp-page="./Delete"
                   asp-route-restaurantId="@Model.Id">
                    <i class=""></i>
                </a>
        </div>
    </div>
